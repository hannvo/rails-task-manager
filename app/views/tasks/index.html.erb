<h1>My tasks</h1>

<ul class="task-list">
  <% @tasks.each do |task| %>
    <% done = task.completed ? '✔' : '◻️'  %>
      <li class="task-list-item">
        <span class="checkbox"><%= done %></span>
        <%= link_to task.title, task_path(task) %>
        <%= link_to '🗑', task_path(task), method: :delete %>
      </li>
  <% end %>
</ul>


<hr>

<%= link_to 'Add a new task', new_task_path %>
